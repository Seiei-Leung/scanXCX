<view class='inandout'>
  <view class="pageWrapper" style="padding-top: 20px;">
    <view class="item {{resultList.length == 2 || kind == '分码' ? 'unuse':''}}" hover-class='active' bindtap="scanForBedNum" data-kind="bed">分床入仓</view>
    <view class="item {{resultList.length == 2 || kind == '分床' ? 'unuse':''}}" hover-class='active' bindtap="scanForBedNum" data-kind="size">分码入仓</view>
    <view class="item {{resultList.length == 2 ? 'unuse':''}}" hover-class='active' bindtap="inputByHand">手动入仓</view>
  </view>
  <view>
    <view class="inputBar">
      <view class="label">仓位：</view>
      <view class="input">{{storageNum}}</view>
    </view>
    <view wx:for="{{resultList}}">
      <view class="inputBar">
        <view class="label">制单号：</view>
        <view class="input">{{item.orderno}}</view>
      </view>
      <view class="inputBar" wx:if="{{item.kind == '分床'}}">
        <view class="label">床次：</view>
        <view class="input">{{item.bednno}}</view>
      </view>
      <view class="inputBar" wx:if="{{item.kind == '分码'}}">
        <view class="label">尺码：</view>
        <view class="input">{{item.sizes}}</view>
      </view>
    </view>
  </view>
</view>
<dialog id='dialog' dialogTitle="{{dialogTitle}}" dialogTxt="{{dialogTxt}}" iconType="{{iconType}}"></dialog>