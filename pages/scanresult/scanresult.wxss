/* pages/scanresult/scanresult.wxss */
.inandout .pageWrapper {
	display: flex;
	justify-content: space-around;
	margin-top: 20px;
	font-size: 0;
}
.inandout .pageWrapper .item{
  box-sizing: border-box;
	width: 20%;
	padding: 4px 8px;
	color: #fff;
	font-size: 16px;
  line-height: 1.8em;
	text-align: center;
	border-radius: 4px;
	background-color: #3BBF67;
}
.inandout .pageWrapper .active {
	background-color: #00960c;
}
.inandout .inputBar {
	margin-top: 20px;
	font-size: 0px;
}
.inandout .inputBar .txt {
	display: inline-block;
	padding-left: 1em;
	font-size: 16px;
	vertical-align: top;
}
.inandout .inputBar .input{
	display: inline-block;
	padding-left: 4px;
	width: 150px;
	height: 24px;
	line-height: 24px;
	font-size: 16px;
	border: 1px solid #ddd;
	vertical-align: top;
}
.inandout .inputBar .label{
	box-sizing: border-box;
	display: inline-block;
	padding-left: 1em;
	width: 100px;
	height: 24px;
	vertical-align: top;
	line-height: 24px;
	font-size: 16px;
}
.unuse {
  background-color: #ddd!important
}
.redTxt {
  margin-top: 1em;
  padding-left: 1em;
  font-size: 18px;
  color: red;
}
.blackBackground {
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: rgba(0,0,0,0.5);
}
.matchesBlock {
	box-sizing: border-box;
	margin: auto;
	margin-top: 100px;
	width: 90%;
	padding: 10px;
	text-align: center;
	background-color: #fff;
	border-radius: 4px
}
.matchesBlock .btnWrapper {
	margin-top: 30px;
	display: flex;
	justify-content: space-around;
}
.matchesBlock .submitBtn {
	padding: 5px;
	width: 40%;
	background-color: #3BBF67;
	color: #fff;
	border-radius: 4px
}