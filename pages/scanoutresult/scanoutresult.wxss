.title {
  margin-top: 5px;
  line-height: 1.8em;
  text-align: center;
  font-size: 16px
}

.searchBox {
  box-sizing: border-box;
  padding: 0.5em 1em;
  margin: auto;
  margin-top: 20px;
  width: 95%;
  font-size: 16px;
  border-radius: 4px;
  border: 1px solid #ddd;
  background-color: #fff
}
.btn {
  margin: auto;
  margin-top: 5px;
  width: 30%;
  line-height: 1.8em;
  background-color: #00d010;
  color: #fff;
  font-size: 20px;
  border-radius: 4px;
  text-align: center;
}
.active {
  background-color: #00960c
}